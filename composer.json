{
  "name": "mircokl/shop",
  "description": "A simple TYPO3 extension for shopping cart.",
  "type": "typo3-cms-extension",
  "license": "GPL-2.0-or-later",
  "require": {
    "typo3/cms-core": "^12.4 || ^13.0"
  },
  "autoload": {
    "psr-4": {
      "MircoKl\\Shop\\": "Classes/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "MircoKl\\Shop\\Tests\\": "Tests/"
    }
  },
  "extra": {
    "typo3/cms": {
      "extension-key": "cart"
    }
  },
  "config": {
    "allow-plugins": {
      "typo3/cms-composer-installers": true,
      "typo3/class-alias-loader": true
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^12.2",
    "phpunit/php-code-coverage": "^12.3",
    "friendsofphp/php-cs-fixer": "^3.78",
    "squizlabs/php_codesniffer": "^3.13",
    "phpstan/phpstan": "^2.1"
  },
  "scripts": {
    "phplint": "phpcs",
    "phplint:fix": "phpcbf",
    "phpcs:production": "php-cs-fixer fix --config=.php-cs-fixer.dist.php --diff",
    "phpcs:dry": "php-cs-fixer fix --config=.php-cs-fixer.dist.php --diff --dry-run",
    "phpstan:analyse": "phpstan analyse"
  }
}
